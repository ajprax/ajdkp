<Ui>
    <Font name="Fritz12" font="Fonts\FRIZQT__.TTF" height="12"/>
    <Frame
        name="MLFrameTemplate"
        parent="UIParent"
        movable="true"
        virtual="true"
        inherits="BasicFrameTemplate"
    >
        <Size x="240" y="128"/>
        <Anchors>
            <Anchor point="CENTER" y="-300"/>
        </Anchors>

        <Frames>
            <GameTooltip name="$parentTooltip" inherits="GameTooltipTemplate"/>

            <Frame parentKey="Icon">
                <Size x="36" y="36"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="10" y="-33"/>
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <Texture parentKey="Texture" file="Interface\PaperDoll\UI-Backpack-EmptySlot">
                            <Size x="36" y="36" />
                            <Anchors>
                                <Anchor point="CENTER"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
            </Frame>

            <Frame parentKey="BidderList" name="$parentBidderList">
                <Size x="180" y="0"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-10" y="-33"/>
                </Anchors>
            </Frame>

            <Button name="$parentDeclareWinnerButton" parentKey="DeclareWinner" text="Declare Winner" inherits="UIPanelButtonTemplate">
                <Size x="220" y="20"/>
                <Anchors>
                    <Anchor point="BOTTOMRIGHT" x="-10" y="20"/>
                </Anchors>
            </Button>

            <StatusBar name="$parentCountdownBar" parentKey="CountdownBar" minValue="0" maxValue="190">
                <BarTexture file="Interface/TargetingFrame/UI-StatusBar"/>
                <Size x="0" y="10"/>
                <Anchors>
                    <Anchor point="BOTTOMLEFT" x="4" y="4"/>
                    <Anchor point="BOTTOMRIGHT" x="-4" y="4"/>
                </Anchors>
            </StatusBar>
        </Frames>

        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="Title" inherits="Fritz12">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="5" y="-5"/>
                    </Anchors>
                </FontString>
                <FontString parentKey="OutstandingBiddersCount" inherits="Fritz12">
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" x="20" y="46"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <Scripts>
            <OnLoad>self:RegisterForDrag("LeftButton");</OnLoad>
            <OnDragStart>self:StartMoving();</OnDragStart>
            <OnDragStop>
                self:StopMovingOrSizing();
                local point, _, relative_point, x, y = self:GetPoint()
                AJDKP_FRAME_POSITIONS[self:GetName()] = {point, relative_point, x, y};
                print("saved position:", self:GetName(), unpack(AJDKP_FRAME_POSITIONS[self:GetName()]));
            </OnDragStop>
        </Scripts>
    </Frame>

    <Frame
        name="BidFrameTemplate"
        parent="UIParent"
        movable="true"
        enableMouse="true"
        virtual="true"
        inherits="BasicFrameTemplate"
    >
        <Size x="168" y="90"/>
        <Anchors>
            <Anchor point="CENTER" y="-300"/>
        </Anchors>

        <Frames>
            <GameTooltip name="$parentTooltip" inherits="GameTooltipTemplate"/>

            <Frame parentKey="Icon">
                <Size x="36" y="36"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="10" y="-33"/>
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <Texture parentKey="Texture" file="Interface\PaperDoll\UI-Backpack-EmptySlot">
                            <Size x="36" y="36" />
                            <Anchors>
                                <Anchor point="CENTER"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
            </Frame>

            <EditBox name="$parentBidAmount" parentKey="BidAmount" letters="4" autofocus="false" numeric="true">
                <Size x="45" y="20"/>
                <Anchors>
                    <Anchor point="TOPRIGHT">
                        <Offset x="-60" y="-28"/>
                    </Anchor>
                </Anchors>
                <FontString inherits="ChatFontNormal" />
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture file="Interface\ChatFrame\UI-ChatInputBorder-Left">
                            <Size x="30" y="20" />
                            <Anchors>
                                <Anchor point="LEFT">
                                    <Offset x="-10"/>
                                </Anchor>
                            </Anchors>
                            <TexCoords left="0" right="0.16" top="0" bottom="1.0"/>
                        </Texture>
                        <Texture file="Interface\ChatFrame\UI-ChatInputBorder-Right">
                            <Size x="30" y="20"/>
                            <Anchors>
                                <Anchor point="RIGHT">
                                    <Offset x="-4"/>
                                </Anchor>
                            </Anchors>
                            <TexCoords left="0.88" right="1.0" top="0" bottom="1.0"/>
                        </Texture>
                    </Layer>
                </Layers>
                <Scripts>
                    <OnEscapePressed>
                        self:ClearFocus();
                    </OnEscapePressed>
                </Scripts>
            </EditBox>

            <Button name="$parentMSButton" parentKey="MS" text="MS" inherits="UIPanelButtonTemplate">
                <Size x="50" y="20"/>
                <Anchors>
                    <Anchor point="BOTTOMRIGHT" x="-64" y="20"/>
                </Anchors>
            </Button>
            <Button name="$parentOSButton" parentKey="OS" text="OS" inherits="UIPanelButtonTemplate">
                <Size x="50" y="20"/>
                <Anchors>
                    <Anchor point="BOTTOMRIGHT" x="-10" y="20"/>
                </Anchors>
            </Button>

            <StatusBar name="$parentCountdownBar" parentKey="CountdownBar" minValue="0" maxValue="180">
                <BarTexture file="Interface/TargetingFrame/UI-StatusBar"/>
                <Size x="0" y="10"/>
                <Anchors>
                    <Anchor point="BOTTOMLEFT" x="4" y="4"/>
                    <Anchor point="BOTTOMRIGHT" x="-4" y="4"/>
                </Anchors>
            </StatusBar>
        </Frames>

        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="Title" inherits="Fritz12">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="5" y="-5"/>
                    </Anchors>
                </FontString>

                <FontString parentKey="CurrentDKP" inherits="Fritz12">
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.BidAmount" relativePoint="RIGHT" x="5" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <Scripts>
            <OnLoad>self:RegisterForDrag("LeftButton");</OnLoad>
            <OnDragStart>self:StartMoving();</OnDragStart>
            <OnDragStop>
                self:StopMovingOrSizing();
                local point, _, relative_point, x, y = self:GetPoint()
                AJDKP_FRAME_POSITIONS[self:GetName()] = {point, relative_point, x, y};
                print("saved position:", self:GetName(), unpack(AJDKP_FRAME_POSITIONS[self:GetName()]));
            </OnDragStop>
        </Scripts>
    </Frame>
</Ui>